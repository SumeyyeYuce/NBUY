@model UserManageDto
<h1 style="color:brown" class="mt-2">Hesabımı Yönet</h1>

<style>
    .input {
        border: 1px solid #FF8E00;
        border-radius: 10px;
    }
</style>
<form asp-controller="Account"
      asp-action="Manage"
      method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="col-6 mb-3">
            <label asp-for="FirstName" class="form-label "></label>
            <input class="form-control input" asp-for="FirstName">
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="LastName" class="form-label"></label>
            <input class="form-control input" asp-for="LastName">
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="UserName" class="form-label"></label>
            <input class="form-control input" asp-for="UserName">
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3"> 
            <label asp-for="Email" class="form-label"></label>
            <input class="form-control input" asp-for="Email">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="col-6 mb-3">
            <label asp-for="Gender" class="form-label"></label>
            <select asp-for="Gender" asp-items="@Model.GenderSelectList" class="form-select input">
            </select>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
             
        @{
            DateTime today = DateTime.Now;
            int yearToday = today.Year;
            int year = yearToday - 18;
            int month = today.Month;
            int day = today.Day;
            DateTime minBirthOfDate = new DateTime(year, month, day);

        }

        <div class="col-6 mb-3">
            <label asp-for="DateOfBirth" class="form-label"></label>
            <input type="date"
                   class="form-control input"
                   asp-for="DateOfBirth"
                   value="@(Model.DateOfBirth.ToString("yyyy-MM-dd") == "0001-01-01" ?
                minBirthOfDate.ToString("yyyy-MM-dd"): Model.DateOfBirth.ToString("yyyy-MM-dd"))"
                   min="1800-01-01"
                   max="@minBirthOfDate.ToString("yyyy-MM-dd")">
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>


        <button type="submit" class="btn text-white" style="background-color:#FBD148">Değişiklikleri Kaydet</button>
        <a type="button" class="btn text-white mt-2" style="background-color:rgb(215, 60, 52);"
           asp-controller="Home"
           asp-action="Index">Vazgeç</a>
    </div>
</form>