@using YemekSitesi.Core;
@model List<RoleDto>


   <div class="d-flex bd-highlight">
    <div class="p-2 flex-grow-1 bd-highlight mt-1">
        <h1 class="text-success fs-2">Rol Listesi</h1>
    </div>
    <div class="p-2 bd-highlight mt-1">
        <a class="btn btn-outline-secondary"
           asp-area="Admin"
           asp-controller="Role"  
           asp-action="Create">Role Ekle</a>
    </div>
    
</div>

<hr />
<table class="table table-striped table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Role Adı</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {


            @foreach (var role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td>@role.Description</td>
                    <td>
                        <a class="btn text-white" style="background-color:#FBD148"
                   asp-area="Admin"
                   asp-controller="Role"
                   asp-action="Edit"
                   asp-route-id=@role.Id>Düzenle</a>

                        <a class="btn text-white" style="background-color: rgb(215, 60, 52)"
                   asp-area="Admin"
                   asp-controller="Role"
                   asp-action="Delete"
                   asp-route-id=@role.Id>Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            TempData["Message"] = Works.PushMessage("Bilgi", "kayıtlı bir rol bilgisi bulunmamaktadır", "warning");
        }
    </tbody>
</table>


