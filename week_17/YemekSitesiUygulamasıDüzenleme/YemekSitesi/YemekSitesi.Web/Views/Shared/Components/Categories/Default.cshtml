@using YemekSitesi.Entity.Concrete
@model List<Category>

<style>
    .renk{
        background-color: #FBD148;
    }
</style>



<div class="row ">
    <div class="col-10 d-flex justify-content-around renk">

        @foreach (var category in Model)
        {
            <nav class="navbar navbar-expand  ">
                <div class="container-fluid">

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link text-danger" aria-current="page"
                               asp-controller="Food"
                               asp-action="FoodList"
                               asp-route-categoryurl="@category.Url">@category.Name</a>
                            </li>


                        </ul>
                    </div>
                </div>
            </nav>

        }
    </div>
    <div class="col-2 renk">
        @await Html.PartialAsync("_Search")
    </div>
</div>