   <!DOCTYPE html>
<html lang="en">
    @* Burada header.cshtml partial viewını çagırıyoruz *@
    @* <partial name="_Header" /> *@
    @* bu komut yukarıdaki komutun aynıısnı yapıyor c# ile *@
    @await Html.PartialAsync("_Header")

<body>
    @await RenderSectionAsync("FirstSection",false)
    <partial name="_HeaderNavbar" />

    <div class="container">

        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <partial name="_Footer" />

     @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
