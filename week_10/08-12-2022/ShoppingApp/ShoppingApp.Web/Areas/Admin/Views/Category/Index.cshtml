@model CategoryListDto

@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<hr>
<button class="btn btn-outline-primary">Yeni Kategori Ekle</button>
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Açıklama</th>
            <th>Url</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
                <td>@category.Url</td>
                <td>
                    <a class="btn btn-warning btn-sm">Düzenle</a>
                    <a class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>