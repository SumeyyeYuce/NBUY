@model List<Yazar>
<div class="px-2">
     <h3 class="display-6 text-primary fs-3 fw-normal">Yazarlar</h3>
</div>
<div class="list-group">
    @foreach (var y in Model)
    {
        <a asp-controller="Home" asp-action="KategoriyeGoreYazarListesi" asp-route-id=@y.Id class="list-group-item list-group-item-action  @(ViewBag.SeciliYazar==y.Id ? " active" : "")">
            @y.Ad
        </a>
    }
</div>