@model CategoryListDto

<hr>
<a 
    class="btn btn-outline-primary"
    asp-area="Admin"
    asp-controller="Category"
    asp-action="Create"
   
>Yeni Kategori Ekle</a>
 @*/siteadresi/admin/category/creat yapsıını oluşturuyot*@
<hr />
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Açıklama</th>           
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.Categories)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>@category.Description</td>
               
                <td>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id"
                  class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id"
                    class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>