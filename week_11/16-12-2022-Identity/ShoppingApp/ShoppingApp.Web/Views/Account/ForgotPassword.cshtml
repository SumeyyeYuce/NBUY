
<h1>Şifremi Unuttum</h1>
<hr />
<form asp-controller="Account"
      asp-action="ForgotPassword"
      method="post">
    
    <div class="row">
        <div class="col-4">
            @*buradaki All hem modeldeki hemde modelde olmayan hataları göstericek*@
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="mb-3">
                <label class="form-label">Kayıtlı email adresini giriniz</label>
                <input class="form-control" name="email" type="email">           
            </div>


            <button type="submit" class="btn btn-primary">Şifre sıfırlama linkini Gönder</button>
           
            <a type="button" class="btn btn-light"
               asp-controller="Home"
               asp-action="Index">Vazgeç</a>
        </div>
    </div>
</form>
