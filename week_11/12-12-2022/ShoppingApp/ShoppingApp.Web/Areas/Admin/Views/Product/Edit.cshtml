@model ProductUpdateDto
<h1>Ürün Düzenleme</h1>
<hr />

<form asp-area="Admin"
      asp-controller="Product"
      asp-action="Edit"
      method="post"
      enctype="multipart/form-data">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="row">
        <div class="col-8">
            <div class="mb-3">
                @*buradaki  asp-for="Name" CategoryAddDto dan gelen Name oluyor*@
                <label asp-for="Name" class="form-label"></label>
                <input class="form-control" asp-for="Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input class="form-control" asp-for="Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label"></label>
                <input type="file" asp-for="ImageFile" accept="image/" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
               <img src="~/images/@(Model.ImageUrl!=null ? Model.ImageUrl:"01.png")" />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <input class="form-control" asp-for="Description">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Değişiklikleri Kaydet</button>

           
            @*submit oludunda yukarıdaki asp leri çaıiıurıy*@
        </div>
        <div class="col-4">
            <div class="mb-3">

                <label class="form-label" asp-for="Categories"></label>

                @foreach (var category in Model.Categories)
                {
                    <div>
                        <input type="checkbox" class="form-check-input"
                           name="selectedCategoryIds"
                           value="@category.Id"
                           @if (Model.SelectedCategoryIds!=null)
                           {
                           @(Model.SelectedCategoryIds.Any(sc=>sc==category.Id) ? "checked": "")
                           } />
                        <label>@category.Name</label>
                    </div>
                }
             
                <span asp-validation-for="SelectedCategoryIds" class="text-danger"></span>
            </div>
            <div class="mb-1">Seçenekler </div>

            <div class="">

                <input type="checkbox"
                       class="form-check-input" asp-for="IsHome">
                <label asp-for="IsHome" class="form-label"></label>
                <span asp-validation-for="IsHome" class="text-danger"></span>
            </div>

            <div class="mb-3">

                <input type="checkbox"
                       class="form-check-input" asp-for="IsApproved">
                <label asp-for="IsApproved" class="form-label"></label>
                <span asp-validation-for="IsApproved" class="text-danger"></span>
            </div>

        </div>
    </div>

</form>
