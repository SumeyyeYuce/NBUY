@model List<ProductListDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Kategoriler</h1>
<hr>
<a class="btn btn-outline-primary"
   asp-area="Admin"
   asp-controller="Product"
   asp-action="Create">Yeni Ürün Ekle</a>
@*/siteadresi/admin/category/creat yapsıını oluşturuyot*@
<hr />
<table class="table table-responsive table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Resim</th>
            <th>Ad</th>
            <th>Fiyatı</th>
            <th>Açıklama</th>
            <th>Kategoriler</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Product.Id</td>
                <td>
                    <img src="/images/@item.Product.ImageUrl" width="50" />
                </td>
                <td>@item.Product.Name</td>
                <td>@($"{item.Product.Price:C2}")</td>
                <td>@item.Product.Description</td>
                <td>
                   <ul>
                        @foreach (var category in item.Product.ProductCategories)
                        {
                            <li>@category.Category.Name</li>
                        }
                   </ul>
                </td>
              

                <td>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@item.Product.Id"
                   class="btn btn-warning btn-sm">Düzenle</a>
                    <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.Product.Id"
                   class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>