@using YemekSitesi.Entity.Concrete
<nav class="navbar navbar-expand-lg navbar-white bg-white border border-danger">
    <div class="container-fluid">
        @*<div class="row">
            <div class="col-6 border border-primary">*@
                <img src="/images/logo.png" style=" width: 120px; height:80px;" alt="Web Sitesi Logosu" />
        @*    </div>
        </div>*@
       
        <a class="navbar-brand text-danger" asp-area="" asp-controller="Home" asp-action="Index">YemekTariflerim</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page"
                       asp-area="" asp-controller="Home" asp-action="Index">Ansayfa</a>
                </li>
                <li class="nav-item">  
                    <a class="nav-link text-dark" 
                       asp-area="" asp-controller="Food" asp-action="FoodList">Tarifler</a>
                </li>
             
               
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Panel</a>
                    </li>
                }   
            </ul>
            <ul class="navbar-nav ml-auto">  
                @if (User.Identity.IsAuthenticated)
                {
                     <li class="nav-item">
                            <a class="nav-link text-dark"
                           asp-controller="Account"
                           asp-action="Manage"
                       asp-route-id="@User.Identity.Name">@User.Identity.Name</a>
                        </li>

                     <li class="nav-item">
                    <a class="nav-link text-dark"
                       asp-controller="Account"
                       asp-action="Exit">Çıkış Yap</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-dark"
                       asp-controller="Account"
                       asp-action="Register">Kayıt Ol</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-dark"
                       asp-controller="Account"
                       asp-action="Login">Giriş Yap</a>
                    </li>
                }


            </ul>
          
           
        </div>
    </div>
</nav>






























