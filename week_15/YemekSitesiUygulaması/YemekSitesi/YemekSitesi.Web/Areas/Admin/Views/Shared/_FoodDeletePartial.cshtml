@using YemekSitesi.Entity.Concrete
@model Food


<button type="button" class="btn btn-outline-danger mt-2" data-bs-toggle="modal" data-bs-target="#modalFoodDelete_@Model.Id" style="">
    Sil
</button>


<div class="modal fade" id="modalFoodDelete_@Model.Id" tabindex="-1" aria-labelledby="modalLabelFoodDelete_@Model.Id" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalLabelFoodDelete">Dikkat</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div>
                    <img src="~/images/@Model.ImageUrl" style="width:50%" />
                </div>
                <div class="mt-3 ms-1">
                    <strong>@Model.Name</strong> adlı yemeği  Silmek istediğinizden emin misiniz?
                </div>

            </div>
            <div class="modal-footer d-flex justify-content-center">

                <a asp-area="Admin"
                   asp-controller="Food"
                   asp-action="Delete"
                   asp-route-id="@Model.Id"
                   class="btn btn-primary">Evet</a>

                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>

            </div>
        </div>
    </div>
</div>