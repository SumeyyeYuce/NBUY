@using YemekSitesi.Web.Models.Dtos
@model FoodDto
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
<style>
    .ımage{
        width:100%;
        height: 20%;
      
    }
</style>
@*her bir yemegin yemek kartlarını(css görüntülerini) burada oluşturdum*@

<div class="row">
    <div class="col-md-3">

        <div class="card mb-3" style="width: 17rem; height:22rem;">
          
            <img src="/images/@Model.ImageUrl" class="card-img-top" style="width:100%; height:130px;">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a class="btn text-white container-fluid" style="background-color:#5abc5a"
                   asp-controller="Food"   
                   asp-action="FoodDetails"
                   asp-route-foodurl=@Model.Url>Tarif Detayları</a>

                <form asp-controller="Favorite"
                      asp-action="AddToFavorite"
                      method="post">
                    <input type="hidden" name="foodId" value="@Model.Id" />
                    <input type="hidden" name="favortiteNumber" value="1" />
                    <button type="submit" class="btn btn-success btn-sm mt-2">Favoriye Ekle</button>
                </form>

            </div>
        </div>
            


    </div>
</div>


