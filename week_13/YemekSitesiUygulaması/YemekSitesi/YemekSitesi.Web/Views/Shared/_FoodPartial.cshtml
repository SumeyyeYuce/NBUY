@using YemekSitesi.Web.Models.Dtos
@model FoodDto

<style>
    .ımage{
        width:100%;
        height: 20%;
      
    }
</style>
@*her bir yemegin yemek kartlarını(css görüntülerini) burada oluşturdum*@
<div class="card mb-2">
    <div class=" p-2 text-center border border-primary ">
        <img src="/images/@Model.ImageUrl" class="ımage" />
    </div>
    <div class="card-body">
       
        <h5 class="card-title text-center ">@Model.Name</h5>
        <div class="text-muted text-center p-4">@Model.CookingTime</div>
        <div class="text-success text-center">@Model.DateAdded.ToShortDateString()</div>     
    </div>

    <div class="card-footer d-flex ">
        <a class="btn btn-success container-fluid"
            asp-controller="Food"
           asp-action="FoodDetails"
           asp-route-foodurl=@Model.Url>Tarif Detayları</a>
    </div>

</div>