@model ProductViewModel
<h1 class="text-danger">Ürün Detayları</h1>
<div class="card mt-3">
    <div class="row">
        <div class="col-4 p-5"><img src="http://localhost:5200/images/@Model.ImageUrl" width="50" /></div>
        <div class="col-8 p-5">
            <div class="text-danger fs-4">
                @Model.Name
            </div>
            <div class="text-success">
                @($"{Model.Price:C0}")
            </div>
            <div class="mt-3">@Model.Description</div>
        </div>
    </div>
</div>