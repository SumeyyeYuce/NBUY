@model List<ProductViewModel>
@{
    ViewData["Title"] = "Ürün Yönetim Sayfası";
}

<h1 class="display-6">Ürün Listesi</h1>
<a class="btn btn-warning"
   asp-controller="Product"
   asp-action="Create" >Yeni Ürün Ekle</a>

<table class="table table-sm table-bordered mt-4">

    <thead>
        <tr>
            
            <th>#</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
               
                <td><img src="http://localhost:5200/images/@product.ImageUrl" width="15" /></td>
                <td>@product.Name</td>
                <td>@($"{product.Price:C0}")</td>
                <td>
                    <a 
                        class="btn btn-warning" 
                        asp-controller="Product" 
                        asp-action="Edit" asp-route-id="@product.Id">Düzenle</a>

                    <a class="btn btn-danger"
                       asp-controller="Product"
                       asp-action="Delete" asp-route-id="@product.Id">Sil</a>

                </td>
                @* <td>@product.Description</td>*@

            </tr>
        }
    </tbody>
</table>
