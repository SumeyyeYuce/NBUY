@model FavoriteDto

<style>
    .btn-renk {
        color: white;
        background-color: #FBD148;
    }
</style>

@if (Model.FavoriteItems.Count == 0)
{
    <div class="row">
        <div class="alert alert-danger mt-3">
           Favorinizde yemek bulunmamaktadır
        </div>
    </div>
}
else
{

    
  

   
        <div class="text-center">
            <h1 class="display-4 mb-4">Favori Yemeklerim</h1>
        </div>

         <div class="row">  
               
        @foreach (var favItem in Model.FavoriteItems)  
        {
            <div class="col-md-3">

                    <div class="card mb-3" style="width: 17rem; height:22rem;">
                            <input type="hidden" name="favItemId" value="@favItem.FavoriteItemId" />
                        <img src="/images/@favItem.ImageUrl" class="card-img-top" style="width:100%; height:130px;">
                        <div class="card-body">
                            <h5 class="card-title">@favItem.FoodName</h5>
                            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                            <a class="btn text-white container-fluid btn-renk"    
                       asp-controller="Food"
                       asp-action="FoodDetails"
                       asp-route-foodurl=@favItem.FoodUrl>Tarif Detayları</a>

                            <a class="btn btn-danger mt-1 text-white container-fluid" asp-controller="Favorite"          
                          asp-action="DeleteFavorite"
                          asp-route-id="@favItem.FavoriteItemId">Favoriden Kaldır  
                            </a>
                        </div>
                    </div>
                          

            </div>
            
        }
      
    </div>
   

 




