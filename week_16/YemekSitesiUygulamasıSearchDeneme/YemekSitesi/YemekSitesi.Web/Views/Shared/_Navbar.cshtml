@using YemekSitesi.Entity.Concrete
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
<nav class="navbar navbar-expand-lg text-white navbar-white border border-danger" style="background-color:rgb(215, 60, 52);">
    <div class="container-fluid">
        @*<div class="row">
            <div class="col-6 border border-primary">*@
               @* <img src="/images/logo.png" style=" width: 120px; height:80px;" alt="Web Sitesi Logosu" />*@
        @*    </div>
        </div>*@
       
        <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">YemekTariflerim</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0 ">
                <li class="nav-item">
                    <a class="nav-link active text-white" aria-current="page"
                       asp-area="" asp-controller="Home" asp-action="Index">Ansayfa</a>
                </li>
                <li class="nav-item">  
                    <a class="nav-link text-white"
                       asp-area="" asp-controller="Food" asp-action="FoodList">Tarifler</a>
                </li>
             
               
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white " asp-area="Admin" asp-controller="Home" asp-action="Index">Admin Panel</a>
                    </li>
                }
             
 
            </ul>
            <ul class="navbar-nav ml-auto">  
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-white"
                           asp-controller="Favorite"
                           asp-action="Index">Favoriler <i class="fa-solid fa-heart ms-1"></i> </a>
                        </li>


                     <li class="nav-item">
                        <a class="nav-link text-white"
                           asp-controller="Account"
                           asp-action="Manage"
                       asp-route-id="@User.Identity.Name">@User.Identity.Name <i class="fa-solid fa-user ms-1"></i> </a>
                        </li>
                            
                     <li class="nav-item">
                        <a class="nav-link text-white"
                       asp-controller="Account"
                       asp-action="Exit">Çıkış Yap <i class="fa-solid fa-right-from-bracket"></i> </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link text-white mt-0"
                       asp-controller="Account"
                       asp-action="Register">Kayıt Ol<i class="fa-solid fa-user ms-2"></i> </a>
                    </li>

                   
                   <li class="nav-item">
                           <a class="nav-link text-white mt-0"
                           asp-controller="Account"
                       asp-action="Login">Giriş Yap<i class="fa-solid fa-right-to-bracket ms-1"></i></a>       
                    </li>
                   
                  
                   
                   
                }


            </ul>
            
           
        </div>
    </div>
</nav>






























