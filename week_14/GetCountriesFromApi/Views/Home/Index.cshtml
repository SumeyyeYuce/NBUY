@model List<Country>
@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ülke</th>
            <th>Başkent</th>
            <th>Nufus</th>
            <th>Dil</th>
            <th>Araç Trafigi</th>
            <th>Bayrak</th>


        </tr>  
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>@country.Name.Comman</td>
                <td>@(country.Capital==null ? "-" : country.Capital.First())</td>
                <td>@country.Population</td>
                <td>@(country.Languages == null ? "-" : country.Languages.First().Value)</td>
               <td>@country.Car.Side</td>
             
                <td>
                    <img src="@country.Flag.Png" width="200" />

                </td>
            </tr>
        }
    </tbody>
</table>
